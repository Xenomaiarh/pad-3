generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model InventoryItem {
  id        String   @id @default(cuid())
  productId String   @unique
  stock     Int      @default(0)
  reserved  Int      @default(0)
  warehouse String?
  lastRestock DateTime?
  reorderLevel Int     @default(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inventory_items")
}

model InventoryLog {
  id        String   @id @default(cuid())
  productId String
  action    String   // "added", "removed", "reserved", "released"
  quantity  Int
  reason    String?
  createdAt DateTime @default(now())

  @@map("inventory_logs")
}
